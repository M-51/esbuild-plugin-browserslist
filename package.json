{
  "name": "esbuild-plugin-browserslist",
  "description": "Configure esbuild's target based on a browserslist query",
  "version": "0.0.1",
  "author": "Nihal Gonsalves <nihal@nihalgonsalves.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc --project tsconfig.cjs.json",
    "test": "exit 0",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src/",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "devDependencies": {
    "@nihalgonsalves/esconfig": "^0.0.8",
    "@types/node": "<15",
    "eslint": "^7.25.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  }
}
